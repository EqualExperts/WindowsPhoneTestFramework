<UserControl 
    x:Class="Microsoft.Phone.Applications.UnitConverter.View.TwoListBoxes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Converters="clr-namespace:Microsoft.Phone.Applications.UnitConverter.Converters" mc:Ignorable="d"
    d:DesignHeight="800" d:DesignWidth="480">

    <UserControl.Resources>
        <Converters:AutomationListConverter x:Key="AutomationListConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Path=Strings.From, Source={StaticResource Resources}}"
                   Margin="24,15,0,0"
                   FontSize="{StaticResource PhoneFontSizeLarge}"
                   FontFamily="{StaticResource PhoneFontFamilySemiLight}"/>
        <TextBlock Text="{Binding Path=Strings.To, Source={StaticResource Resources}}" 
                   Margin="24,15,0,0"
                   Grid.Column="1"
                   FontSize="{StaticResource PhoneFontSizeLarge}"
                   FontFamily="{StaticResource PhoneFontFamilySemiLight}"/>

        <ListBox Name="fromListView" 
                 Grid.Row="1"
                 Margin="12,0,0,0" HorizontalAlignment="Left" 
                 Style="{StaticResource UnitsListBoxStyle}"
                 SelectionChanged="OnFromSelectionChanged" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding NameLocalized}" Tag="{Binding ResourceName, Converter={StaticResource AutomationListConverter}, ConverterParameter=From}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Name="toListView"  
                 Grid.Row="1"
                 Grid.Column="1" 
                 Margin="12,0,0,0" HorizontalAlignment="Left" 
                 Style="{StaticResource UnitsListBoxStyle}"
                 SelectionChanged="OnToSelectionChanged" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding NameLocalized}" Tag="{Binding ResourceName, Converter={StaticResource AutomationListConverter}, ConverterParameter=To}"/>
                </DataTemplate>                
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
